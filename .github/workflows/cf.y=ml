name: Deploy Python Script

on:
  workflow_dispatch: # Putting here is also fine!!
  push:
    branches: 
      - master
  schedule:
    - cron: '*/60 * * * *'  # 每天 UTC 时间的 0:00 执行一次，你可以根据需要调整 cron 表达式

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install requests urllib3

      - name: Run Python script1
        run: python cfupload.py  # 替换为你的 Python 脚本的路径
        
      //- name: Run Python script2
      //  run: python CT.py  # 替换为你的 Python 脚本的路径
